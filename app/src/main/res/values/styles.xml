<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Grey тема-->
    <style name="AD2Theme" parent="Theme.AppCompat.NoActionBar">
        <!--фон панели уведомления-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--фон панели приложения-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--бэкграунд приложения-->
        <item name="android:windowBackground">@drawable/background_hd</item>
        <!--подсветка элементов-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--цвет главного текста-->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!--цвет под заголовков-->
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!--подсказка для строки поиска-->
        <item name="queryHint">@string/toolbar_search_hint</item>
        <!--устанавливаем тему для диалогового окна-->
        <!--<item name="android:alertDialogTheme">@style/MyAlertDialogStyle</item>-->
        <!--цвет меню текста-->
        <item name="android:actionMenuTextColor">@color/textColorSecondary</item>

    </style>

    <!--Black тема-->
    <style name="AD2Theme.Black" >
        <!--фон панели уведомления-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark.Dark</item>
        <!--фон панели приложения-->
        <item name="colorPrimary">@color/colorPrimary.Dark</item>
        <!--бэкграунд приложения-->
        <item name="android:windowBackground">@drawable/background_hd_black</item>
        <!--подсветка элементов-->
        <item name="colorAccent">@color/colorAccent.Dark</item>
        <!--цвет главного текста-->
        <item name="android:textColorPrimary">@color/textColorPrimary.Dark</item>
        <!--цвет под заголовков-->
        <item name="android:textColorSecondary">@color/textColorSecondary.Dark</item>
        <!--устанавливаем тему для диалогового окна-->
        <!--<item name="android:alertDialogTheme">@style/MyAlertDialogStyle.Black</item>-->
    </style>

    <!--White тема-->
    <style name="AD2Theme.White" >
        <!--фон панели уведомления-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark.White</item>
        <!--фон панели приложения-->
        <item name="colorPrimary">@color/colorPrimary.White</item>
        <!--бэкграунд приложения-->
        <item name="android:windowBackground">@drawable/background_hd_white</item>
        <!--подсветка элементов-->
        <item name="colorAccent">@color/colorAccent.White</item>
        <!--цвет главного текста-->
        <item name="android:textColorPrimary">@color/textColorPrimary.White</item>
        <!--цвет под заголовков-->
        <item name="android:textColorSecondary">@color/textColorSecondary.White</item>
        <!--цвет неактивных элементов-->
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/textColorSecondary.White</item>
        <!--устанавливаем тему для диалогового окна-->
        <!--<item name="android:alertDialogTheme">@style/MyAlertDialogStyle.White</item>-->

        <!--тёмные иконки для светкой панели уведомления-->
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:listDivider">@color/textColorSecondary</item>
        <item name="android:divider">@color/textColorSecondary</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:showDividers">middle</item>

    </style>

    <style name="SplashTheme" parent="AD2Theme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowAnimationStyle">@style/MyWindowAnimationTransition</item>
    </style>

    <style name="SplashTheme.Dark" parent="AD2Theme.Black">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowAnimationStyle">@style/MyWindowAnimationTransition</item>
    </style>

    <style name="SplashTheme.White" parent="AD2Theme.White">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowAnimationStyle">@style/MyWindowAnimationTransition</item>
    </style>



    <style name="MyWindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>
