<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Grey тема-->
    <style name="AD2Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--фон панели уведомления-->
        <item name="colorPrimaryDark">@color/gray_700</item>
        <!--фон панели приложения-->
        <item name="colorPrimary">@color/gray_500</item>
        <!--бэкграунд приложения-->
        <item name="android:windowBackground">@color/gray_500</item>
        <item name="myBackgroundAD2">@drawable/background_hd</item>
        <!--подсветка элементов-->
        <item name="colorAccent">@color/red_500</item>
        <!--цвет главного текста-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--цвет под заголовков-->
        <item name="android:textColorSecondary">@color/gray_100</item>

        <!--подсказка для строки поиска-->
        <item name="queryHint">@string/toolbar_search_hint</item>
        <!--устанавливаем тему для диалогового окна-->
        <!--<item name="android:alertDialogTheme">@style/MyAlertDialogStyle</item>-->
        <!--цвет меню текста-->
        <item name="android:actionMenuTextColor">@color/gray_100</item>

        <item name="android:windowAnimationStyle">@style/MyWindowAnimationTransition</item>
    </style>

    <!--Black тема-->
    <style name="AD2Theme.Black" >
        <!--фон панели уведомления-->
        <item name="colorPrimaryDark">@color/black</item>
        <!--фон панели приложения-->
        <item name="colorPrimary">@color/black_700</item>
        <!--бэкграунд приложения-->
        <item name="android:windowBackground">@drawable/background_hd_black</item>
        <item name="myBackgroundAD2">@drawable/background_hd_black</item>
        <!--подсветка элементов-->
        <item name="colorAccent">@color/purple</item>
        <!--цвет главного текста-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--цвет под заголовков-->
        <item name="android:textColorSecondary">@color/gray_800</item>
        <!--устанавливаем тему для диалогового окна-->
        <!--<item name="android:alertDialogTheme">@style/MyAlertDialogStyle.Black</item>-->
    </style>

    <!--White тема-->
    <style name="AD2Theme.White" >
        <!--фон панели уведомления-->
        <item name="colorPrimaryDark">@android:color/white</item>
        <!--фон панели приложения-->
        <item name="colorPrimary">@android:color/white</item>
        <!--бэкграунд приложения-->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="myBackgroundAD2">@drawable/background_hd_white</item>
        <!--подсветка элементов-->
        <item name="colorAccent">@color/blue</item>
        <!--цвет главного текста-->
        <item name="android:textColorPrimary">@color/black_800</item>
        <!--цвет под заголовков-->
        <item name="android:textColorSecondary">@color/gray_900</item>
        <!--цвет неактивных элементов-->
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/gray_900</item>
        <!--устанавливаем тему для диалогового окна-->
        <!--<item name="android:alertDialogTheme">@style/MyAlertDialogStyle.White</item>-->

        <!--тёмные иконки для светкой панели уведомления-->
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:listDivider">@color/gray_100</item>
        <item name="android:divider">@color/gray_100</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:showDividers">middle</item>

    </style>

    <style name="SplashTheme" parent="AD2Theme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="SplashTheme.Dark" parent="AD2Theme.Black">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="SplashTheme.White" parent="AD2Theme.White">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="MyWindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>

</resources>
