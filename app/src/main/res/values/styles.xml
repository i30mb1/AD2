<resources>

    <style name="MyWindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MyMaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MyDialogContainerAttributes</item>
        <item name="android:windowAnimationStyle">@style/MyWindowAnimationStyle</item>
    </style>

    <style name="MyWindowAnimationStyle" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_to_right</item>
    </style>

    <style name="MyDialogContainerAttributes" parent="MaterialAlertDialog.MaterialComponents">
        <item name="backgroundInsetTop">80dp</item>
        <item name="backgroundInsetBottom">80dp</item>
        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
        <item name="shapeAppearance">?shapeAppearanceMediumComponent</item>
    </style>

    <style name="Widget.TextView.License" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?myTextColorSecondary</item>
        <item name="android:textAppearance">?textAppearanceCaption</item>
    </style>

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Widget.TextView.Coordinate" parent="">
        <item name="fontFamily">@font/iceland_normal</item>
    </style>

    <style name="Widget.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/Widget.TabLayout.Appearance</item>
    </style>

    <style name="Widget.TabLayout.Appearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.TextView.Signature" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/transparent_30</item>
    </style>

    <style name="Widget.TextView.HeroSignature" parent="Widget.TextView.Signature">
        <item name="android:paddingLeft">@dimen/padding_for_view_with_line</item>
        <item name="android:paddingRight">@dimen/padding_for_view_with_line</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Widget.TextView.ItemSignature" parent="Widget.TextView.Signature">
        <item name="android:paddingLeft">@dimen/padding_for_view_with_line</item>
        <item name="android:paddingRight">@dimen/padding_for_view_with_line</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Widget.TextView.HeroGuideItemSignature" parent="Widget.TextView.Signature">

    </style>

    <style name="Widget.TextView.SpellSignature" parent="Widget.TextView.Signature">

    </style>

    <style name="Widget.TextView.HeroAdvantage" parent="Widget.TextView.Signature">
        <item name="android:textColor">@android:color/holo_green_light</item>
    </style>

    <style name="Widget.TextView.HeroDisadvantage" parent="Widget.TextView.HeroAdvantage">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

    <style name="Widget.TextView.Title" parent="">
        <item name="android:minHeight">@dimen/title_min_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
    </style>


    <style name="Widget.TextView.HeroGuideTabNumber" parent="">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
