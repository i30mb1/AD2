<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="?colorPrimaryDark"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/streams_placeholder" />

        <TextView
            android:id="@+id/tv_item_list_stream_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:elevation="2dp"
            android:isScrollContainer="false"
            android:textAllCaps="false"
            android:textColor="?android:textColorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            app:layout_constraintTop_toTopOf="@+id/iv"
            tools:text="i30mb1" />

        <TextView
            android:id="@+id/tv_item_list_stream_channel_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:elevation="2dp"
            android:maxLines="4"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/iv"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_list_stream_channel_name"
            app:layout_constraintVertical_bias="0.0"
            tools:text="остаться здесь или пробится наверх" />

        <com.robinhood.ticker.TickerView
            android:id="@+id/tv_item_list_stream_viewers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#4c000000"
            android:elevation="2dp"
            android:gravity="center_vertical|start"
            android:textColor="#fff"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:layout_constraintRight_toRightOf="@+id/iv"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:ticker_animationDuration="1000" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="#4c000000"
            android:elevation="2dp"
            app:layout_constraintLeft_toRightOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/iv"
            app:srcCompat="@drawable/streams_viewers" />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="?colorAccent"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>