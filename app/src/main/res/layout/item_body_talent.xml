<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="n7.ad2.ui.heroInfo.domain.vo.VOBodyTalent" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:minHeight="35dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="?colorSurface"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="4dp"
            android:text="@{item.talentLeft}"
            android:textAppearance="?textAppearanceTalent"
            tools:text="@sample/heroes.json/data/name" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="4dp"
            android:text="@{item.talentLvl}"
            android:textAppearance="?textAppearanceSubtitle1"
            app:autoSizeTextType="uniform"
            tools:text="25" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="@{item.talentRight}"
            android:textAppearance="?textAppearanceTalent"
            tools:text="@sample/heroes.json/data/name" />

    </LinearLayout>
</layout>