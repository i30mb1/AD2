<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="n7.ad2.main.MainViewModel" />

        <variable
            name="activity"
            type="n7.ad2.main.MainActivity" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:windowBackground">

        <ImageView
            android:id="@+id/iv_drawer_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/setting_tell_friend_title"
            android:onClick="@{()->viewModel.startActivityOptions(context)}"
            android:onLongClick="@{activity::toggleSecretActivity}"
            android:scaleType="center"
            android:tint="?android:textColorPrimary"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_setting" />

        <ImageView
            android:id="@+id/iv_drawer_update"
            isBusy="@{viewModel.isUpdating}"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/setting_tell_friend_title"
            android:onClick="@{()->viewModel.startUpdate(true)}"
            android:scaleType="center"
            android:tint="?android:textColorPrimary"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/ic_update" />

        <TextView
            android:id="@+id/tv_drawer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{String.valueOf(activity.observableLastItem)}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--android:textColor="?android:colorAccent"-->

        <LinearLayout
            android:id="@+id/ll_drawer_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view1"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@{activity.observableLastItem==1? @color/colorAccent :@color/textColorSecondary}" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> activity.setFragment(1,true)}"
                    android:padding="6dp"
                    android:text="@string/heroes"
                    android:textColor="@{activity.observableLastItem==1? @color/colorAccent :@color/textColorSecondary}"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view2"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@{activity.observableLastItem==2? @color/colorAccent :@color/textColorSecondary}" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> activity.setFragment(2,true)}"
                    android:padding="6dp"
                    android:text="@string/items"
                    android:textColor="@{activity.observableLastItem==2? @color/colorAccent :@color/textColorSecondary}"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view3"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@{activity.observableLastItem==3? @color/colorAccent :@color/textColorSecondary}" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> activity.setFragment(3,true)}"
                    android:padding="6dp"
                    android:text="@string/news"
                    android:textColor="@{activity.observableLastItem==3? @color/colorAccent :@color/textColorSecondary}"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view4"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@{activity.observableLastItem==4? @color/colorAccent :@color/textColorSecondary}" />


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> activity.setFragment(4,true)}"
                    android:padding="6dp"
                    android:text="@string/tournaments"
                    android:textColor="@{activity.observableLastItem==4? @color/colorAccent :@color/textColorSecondary}"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view5"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@{activity.observableLastItem==5? @color/colorAccent :@color/textColorSecondary}" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> activity.setFragment(5,true)}"
                    android:padding="6dp"
                    android:text="@string/streams"
                    android:textAllCaps="false"
                    android:textColor="@{activity.observableLastItem==5? @color/colorAccent :@color/textColorSecondary}"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view6"
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@{activity.observableLastItem==6? @color/colorAccent :@color/textColorSecondary}" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()-> activity.setFragment(6,true)}"
                    android:padding="6dp"
                    android:text="@string/games"
                    android:textColor="@{activity.observableLastItem==6? @color/colorAccent :@color/textColorSecondary}"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>