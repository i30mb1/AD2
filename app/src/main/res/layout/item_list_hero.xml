<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="n7.ad2.heroes.HeroesFragment" />

        <variable
            name="hero"
            type="n7.ad2.heroes.db.HeroModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            loadImageUrl='@{"file:///android_asset/heroes/" + hero.codeName + "/full.webp"}'
            onError="@{@drawable/hero_placeholder}"
            placeHolder="@{@drawable/hero_placeholder}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="?colorAccent"
            android:contentDescription="@string/setting_tell_friend_title"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{(view)->fragment.startHeroFull(view,hero)}"
            android:paddingStart="2dp"
            android:paddingEnd="0dp"
            android:scaleType="centerCrop"
            android:transitionName="iv"
            tools:ignore="UnusedAttribute"
            tools:src="@drawable/hero_placeholder" />

        <TextView
            android:id="@+id/tv_item_list_hero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="2dp"
            android:background="@drawable/gradient"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:paddingStart="2dp"
            android:paddingEnd="0dp"
            android:text='@{hero.name ?? "empty"}'
            android:textSize="10sp"
            android:textStyle="bold"
            tools:ignore="SmallSp"
            tools:text="@sample/heroes.json/data/nameEng" />

    </com.google.android.material.card.MaterialCardView>
</layout>