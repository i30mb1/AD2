<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_25"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?colorAccent"
            android:gravity="center"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_name" />

        <TextView
            android:id="@+id/tv_20"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?colorAccent"
            android:gravity="center"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toBottomOf="@+id/tv_25" />

        <TextView
            android:id="@+id/tv_10"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?colorAccent"
            android:gravity="center"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toBottomOf="@+id/tv_15" />

        <TextView
            android:id="@+id/tv_15"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?colorAccent"
            android:gravity="center"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toBottomOf="@+id/tv_20" />

        <TextView
            android:id="@+id/tv_10_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_right"
            android:gravity="end"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textAllCaps="false"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_10"
            app:layout_constraintEnd_toStartOf="@+id/tv_10"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/tv_10"
            tools:text="-8 сек. перезарядки Unstable Concoction icon.png Unstable Concoction" />

        <TextView
            android:id="@+id/tv_10_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_left"
            android:gravity="start"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_10"
            app:layout_constraintTop_toTopOf="@+id/tv_10"
            tools:text="+25 к скорости атаки" />

        <TextView
            android:id="@+id/tv_15_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_right"
            android:gravity="end"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_15"
            app:layout_constraintEnd_toStartOf="@+id/tv_15"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/tv_15"
            tools:text="+50 к урону" />

        <TextView
            android:id="@+id/tv_15_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_left"
            android:gravity="start"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_15"
            app:layout_constraintTop_toTopOf="@+id/tv_15"
            tools:text="+400 к здоровью" />

        <TextView
            android:id="@+id/tv_20_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_right"
            android:gravity="end"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_20"
            app:layout_constraintEnd_toStartOf="@+id/tv_20"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/tv_20"
            tools:text="+400 к урону от Unstable Concoction icon.png Unstable Concoction" />

        <TextView
            android:id="@+id/tv_20_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_left"
            android:gravity="start"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_20"
            app:layout_constraintTop_toTopOf="@+id/tv_20"
            tools:text="+30% к прорубанию" />

        <TextView
            android:id="@+id/tv_25_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_right"
            android:gravity="end"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_25"
            app:layout_constraintEnd_toStartOf="@+id/tv_25"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="@+id/tv_25"
            app:layout_constraintVertical_bias="0.51"
            tools:text="-0,2 к задержке перед атакой под Chemical Rage icon.png Chemical Rage" />

        <TextView
            android:id="@+id/tv_25_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_left"
            android:gravity="start"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_25"
            app:layout_constraintTop_toTopOf="@+id/tv_25"
            tools:text="+30 к регенерации от Chemical Rage icon.png Chemical Rage" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?colorPrimaryDark"
            android:padding="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Poison Touch" />

        <LinearLayout
            android:id="@+id/ll_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view8"
            app:layout_constraintTop_toBottomOf="@+id/tv_10"
            tools:text="Выпускает конус отравляющей магии, поражающей нескольких врагов. Жертвы получают периодический урон и замедляются, но если их атаковать, время действия эффекта обновится" />

        <View
            android:id="@+id/view8"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="?colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>