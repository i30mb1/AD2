<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?colorPrimary">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_list_games_team1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:transitionName="team1_name"
                app:layout_constraintEnd_toEndOf="@+id/tv_activity_games_personal_team1_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_activity_games_personal_team1_logo"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="NAVI" />

            <TextView
                android:id="@+id/tv_activity_games_personal_team2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:elevation="2dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:transitionName="team2_name"
                app:layout_constraintEnd_toEndOf="@+id/tv_activity_games_personal_team2_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_activity_games_personal_team2_logo"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="N7" />

            <TextView
                android:id="@+id/tv_activity_games_personal_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?colorPrimary"
                android:elevation="2dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:textColor="?android:textColorSecondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:transitionName="middle"
                app:layout_constraintBottom_toBottomOf="@+id/tv_activity_games_personal_team1_logo"
                app:layout_constraintEnd_toStartOf="@+id/tv_activity_games_personal_team2_logo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_activity_games_personal_team1_logo"
                app:layout_constraintTop_toTopOf="@+id/tv_activity_games_personal_team1_logo"
                tools:targetApi="lollipop"
                tools:text="1:0" />

            <ImageView
                android:id="@+id/tv_activity_games_personal_team1_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:transitionName="team1_logo"
                app:layout_constraintEnd_toStartOf="@+id/tv_activity_games_personal_middle"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_list_games_team1_name"
                app:srcCompat="@drawable/games_unknown_team1" />

            <ImageView
                android:id="@+id/tv_activity_games_personal_team2_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:transitionName="team2_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_activity_games_personal_middle"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity_games_personal_team2_name"
                app:srcCompat="@drawable/games_unknown_team2" />

            <LinearLayout
                android:id="@+id/tv_activity_games_personal_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:minHeight="400dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_activity_games_personal_team1_logo" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/pb_activity_games_personal"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="bottom"
        android:indeterminate="true"
        android:scaleY="5"
        android:visibility="invisible" />
</android.support.design.widget.CoordinatorLayout>