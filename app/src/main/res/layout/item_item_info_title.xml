<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="n7.ad2.ui.itemInfo.domain.vo.VOItemInfoTitle" />

        <variable
            name="popupListener"
            type="kotlin.jvm.functions.Function2" />

        <variable
            name="audioExoPlayer"
            type="n7.ad2.ui.heroPage.AudioExoPlayer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:gravity="center_vertical"
        android:minHeight="@dimen/header_width">

        <TextView
            asyncText="@{item.title}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:textAppearance="?textAppearanceSubtitle1"
            tools:text="Duel" />

        <ImageView
            android:id="@+id/play"
            isSelected="@{item.isPlaying}"
            isVisible="@{item.audioUrl!=null}"
            android:layout_width="@dimen/header_width"
            android:layout_height="@dimen/header_width"
            android:contentDescription="@string/desc_play"
            android:onClick="@{()-> audioExoPlayer.play(item)}"
            android:src="@drawable/selector_play" />
    </LinearLayout>
</layout>