<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="n7.ad2.ui.heroInfo.domain.vo.VODescription" />

        <variable
            name="listener"
            type="n7.ad2.base.VOPopUpListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorPrimary"
                android:gravity="center_vertical"
                android:minHeight="@dimen/header_width">

                <TextView
                    asyncText="@{model.title}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="Duel" />

                <TextView
                    android:id="@+id/hot_key"
                    isVisible='@{model.hotkey!=null}'
                    android:layout_width="@dimen/header_width"
                    android:layout_height="@dimen/header_width"
                    android:background="@color/black_700"
                    android:gravity="center"
                    android:maxEms="1"
                    android:onClick="@{(view)-> listener.onClickListener(view, @string/hotkey)}"
                    android:text="@{model.hotkey}"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="T" />

                <TextView
                    android:id="@+id/legacy_key"
                    isVisible='@{model.hotkey!=null}'
                    android:layout_width="@dimen/header_width"
                    android:layout_height="@dimen/header_width"
                    android:background="@color/black_700"
                    android:gravity="center"
                    android:maxEms="1"
                    android:onClick="@{(view)-> listener.onClickListener(view, @string/legacykey)}"
                    android:text="@{model.legacyKey}"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="T" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_body"
                asyncText="@{model.body}"
                withDash="@{true}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.Body1"
                tools:text="@tools:sample/lorem/random" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>