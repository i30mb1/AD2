<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="n7.ad2.ui.heroInfo.domain.vo.VODescription" />

        <variable
            name="listener"
            type="n7.ad2.base.VOPopUpListener" />

        <variable
            name="fragment"
            type="n7.ad2.ui.heroInfo.HeroInfoFragment" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:onClick="@{()-> fragment.playAudio(model.audioUrl)}"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorPrimary"
                android:gravity="center_vertical"
                android:minHeight="@dimen/header_width">

                <TextView
                    asyncText="@{model.title}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="Duel" />

                <TextView
                    android:id="@+id/hot_key"
                    isVisible='@{model.hotkey!=null}'
                    android:layout_width="@dimen/header_width"
                    android:layout_height="@dimen/header_width"
                    android:background="@drawable/transparent_50"
                    android:gravity="center"
                    android:maxEms="1"
                    android:onClick="@{(view)-> listener.onClickListener(view, @string/hotkey)}"
                    android:text="@{model.hotkey}"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="T" />

                <TextView
                    android:id="@+id/legacy_key"
                    isVisible='@{model.hotkey!=null}'
                    android:layout_width="@dimen/header_width"
                    android:layout_height="@dimen/header_width"
                    android:background="@drawable/transparent_50"
                    android:gravity="center"
                    android:maxEms="1"
                    android:onClick="@{(view)-> listener.onClickListener(view, @string/legacykey)}"
                    android:text="@{model.legacyKey}"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="T" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_50"
                android:orientation="vertical">

                <TextView
                    isVisible="@{model.effect1!=null}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="@{model.effect1}"
                    android:textSize="12sp"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="@tools:sample/lorem" />

                <TextView
                    isVisible="@{model.effect2!=null}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="@{model.effect2}"
                    android:textSize="12sp"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="@tools:sample/lorem" />

                <TextView
                    isVisible="@{model.effect3!=null}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:text="@{model.effect3}"
                    android:textAppearance="?textAppearanceSubtitle1"
                    tools:text="@tools:sample/lorem" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_body"
                asyncText="@{model.body}"
                withDash="@{true}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAppearance="?textAppearanceBody1"
                tools:text="@tools:sample/lorem" />

            <LinearLayout
                isVisible="@{model.cooldown!=null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="4dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    clickableText="@{model.cooldown}"
                    android:textAppearance="?textAppearanceBody1"
                    tools:text="@tools:sample/date/hhmm" />

                <ImageView
                    android:layout_width="@dimen/icon_in_description"
                    android:layout_height="@dimen/icon_in_description"
                    android:contentDescription="@string/desc_cooldown"
                    android:onClick="@{(view)-> listener.onClickListener(view, @string/desc_cooldown)}"
                    android:src="@drawable/cooldown" />
            </LinearLayout>

            <LinearLayout
                isVisible="@{model.mana!=null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="4dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:drawableStart="@drawable/mana"
                    android:text="@{model.mana}"
                    android:textAppearance="?textAppearanceBody1"
                    tools:text="@tools:sample/date/hhmm" />

                <ImageView
                    android:layout_width="@dimen/icon_in_description"
                    android:layout_height="@dimen/icon_in_description"
                    android:contentDescription="@string/desc_mana"
                    android:onClick="@{(view)-> listener.onClickListener(view, @string/desc_mana)}"
                    android:src="@drawable/mana" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>