<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_hero_spell_description_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/colorBackground"
                    android:padding="4dp"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Poison Touch" />

                <TextView
                    android:id="@+id/tv_item_hero_spell_description_key"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="4dp"
                    android:background="?colorAccent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="T" />

                <TextView
                    android:id="@+id/tv_item_hero_spell_description_old_key"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="4dp"
                    android:background="?colorAccent"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="G" />
            </LinearLayout>

            <TextView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/tv_item_hero_spell_description_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textAllCaps="true"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Способность Направленная на область" />

            <TextView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/tv_item_hero_spell_description_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textAllCaps="true"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Действует на Врагов" />

            <TextView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/tv_item_hero_spell_description_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textAllCaps="true"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Урон Физический" />

            <TextView
                android:id="@+id/tv_item_hero_spell_description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="?android:textColorSecondary"
                android:textSize="12sp"
                tools:text="Выпускает конус отравляющей магии, поражающей нескольких врагов. Жертвы получают периодический урон и замедляются, но если их атаковать, время действия эффекта обновится" />

            <LinearLayout
                android:id="@+id/ll_item_hero_spell_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="vertical"
                android:textColor="?android:textColorSecondary" />

            <LinearLayout
                tools:visibility="visible"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_item_hero_spell_description_mp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/setting_tell_friend_title"
                    app:srcCompat="@drawable/mana" />

                <TextView
                    android:id="@+id/tv_item_hero_spell_description_mp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/mana"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp"
                    tools:text="300/600/900" />
            </LinearLayout>

            <LinearLayout
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/ll_item_hero_spell_description_cooldown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/setting_tell_friend_title"
                    app:srcCompat="@drawable/cooldown" />

                <TextView
                    android:id="@+id/tv_hero_spell_description_cooldown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="12sp"
                    tools:text="90/100/120" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>