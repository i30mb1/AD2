<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="?colorPrimaryDark"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view3"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="?colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_item_left_bans"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:minWidth="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/ll_item_right_bans"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/textColorSecondary" />

        <LinearLayout
            android:id="@+id/ll_item_left_bans2"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:minWidth="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/ll_item_left_bans"
            app:layout_constraintStart_toStartOf="@+id/ll_item_left_bans"
            app:layout_constraintTop_toBottomOf="@+id/ll_item_left_bans"
            tools:background="@color/textColorSecondary" />

        <LinearLayout
            android:id="@+id/ll_item_left_picks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:minHeight="20dp"
            android:minWidth="30dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/ll_item_left_bans2"
            app:layout_constraintVertical_bias="0.0"
            tools:background="@color/textColorSecondary" />


        <LinearLayout
            android:id="@+id/ll_item_right_bans"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:minWidth="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ll_item_left_bans"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/textColorSecondary" />

        <LinearLayout
            android:id="@+id/ll_item_right_bans2"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:minWidth="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/ll_item_right_bans"
            app:layout_constraintStart_toStartOf="@+id/ll_item_right_bans"
            app:layout_constraintTop_toBottomOf="@+id/ll_item_right_bans"
            tools:background="@color/textColorSecondary" />

        <LinearLayout
            android:id="@+id/ll_item_right_picks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:minHeight="20dp"
            android:minWidth="30dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_item_right_bans2"
            app:layout_constraintVertical_bias="0.0"
            tools:background="@color/textColorSecondary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
