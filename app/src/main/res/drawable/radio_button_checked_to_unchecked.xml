<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/radio_button_checked">

    <target android:name="group">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_medium"
                android:repeatCount="0"
                android:repeatMode="restart"
                android:valueFrom="1.0"
                android:valueTo="1.0"
                android:valueType="floatType">

                <propertyValuesHolder android:propertyName="scaleX">
                    <keyframe
                        android:fraction="0"
                        android:value="1.0" />
                    <keyframe
                        android:fraction="0.7"
                        android:value="1.0" />
                    <keyframe
                        android:fraction="0.85"
                        android:value="0.9" />
                    <keyframe
                        android:fraction="1.0"
                        android:value="1.0" />
                </propertyValuesHolder>

                <propertyValuesHolder android:propertyName="scaleY">
                    <keyframe
                        android:fraction="0"
                        android:value="1.0" />
                    <keyframe
                        android:fraction="0.7"
                        android:value="1.0" />
                    <keyframe
                        android:fraction="0.85"
                        android:value="0.9" />
                    <keyframe
                        android:fraction="1.0"
                        android:value="1.0" />
                </propertyValuesHolder>
            </objectAnimator>
        </aapt:attr>
    </target>

    <target android:name="circle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_medium"
                android:repeatCount="0"
                android:repeatMode="restart"
                android:valueFrom="1.0"
                android:valueTo="1.0"
                android:valueType="floatType">

                <propertyValuesHolder android:propertyName="trimPathStart">
                    <keyframe
                        android:fraction="0.0"
                        android:value="0.125" />
                    <keyframe
                        android:fraction="0.2"
                        android:value="0.125" />
                    <keyframe
                        android:fraction="0.5"
                        android:value="0.0" />
                    <keyframe
                        android:fraction="1.0"
                        android:value="0.0" />
                </propertyValuesHolder>

                <propertyValuesHolder android:propertyName="trimPathEnd">
                    <keyframe
                        android:fraction="0.0"
                        android:value="0.95" />
                    <keyframe
                        android:fraction="0.2"
                        android:value="0.95" />
                    <keyframe
                        android:fraction="0.5"
                        android:value="1.0" />
                    <keyframe
                        android:fraction="1.0"
                        android:value="1.0" />
                </propertyValuesHolder>

            </objectAnimator>
        </aapt:attr>
    </target>

    <target
        android:name="tick">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_medium"
                android:repeatCount="0"
                android:repeatMode="restart"
                android:valueFrom="1.0"
                android:valueTo="1.0"
                android:valueType="floatType">

                <propertyValuesHolder android:propertyName="trimPathEnd">
                    <keyframe
                        android:fraction="0.0"
                        android:value="1.0" />
                    <keyframe
                        android:fraction="0.5"
                        android:value="0.0" />
                    <keyframe
                        android:fraction="1.0"
                        android:value="0.0" />
                </propertyValuesHolder>

            </objectAnimator>
        </aapt:attr>
    </target>
</animated-vector>