<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    key = имя параметра хранящейсего в SharedPreferences
    entries = список элементов в виде списка вариантов в GUI
    entryValues = значение выбранного элемента будет храниться в SharedPreferences
    title = заголовок отображаеммый в GUI
    summary = описание отображаеммое в GUI
    persistent = если true то сохранение значения после каждого его изменения
    default = значение выбранное по умолчанию
    <PreferenceCategory android:title="@string/setting_category_setting">
        <Preference
            android:key="@string/setting_theme_key"
            android:title="@string/setting_theme_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/setting_account_key"
            android:summary="@string/setting_account_summary"
            android:title="@string/setting_account_title" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/setting_show_log_key"
            android:summary="@string/setting_show_log_summary"
            android:title="@string/setting_show_log" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/setting_news_with_image_key"
            android:summary="@string/setting_news_with_image_summary"
            android:title="@string/setting_news_with_image_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/setting_category_about">
        <Preference
            android:key="@string/setting_about_key"
            android:summary="@string/setting_about_desc"
            android:title="@string/setting_about_title" />
        <Preference
            android:key="@string/setting_donate_key"
            android:summary="@string/setting_month_desc"
            android:title="@string/setting_month_title" />
        <Preference
            android:key="@string/setting_contact_us_key"
            android:summary="@string/setting_contact_us_summary"
            android:title="@string/setting_contact_us" />
        <Preference
            android:key="@string/setting_tell_friend_key"
            android:summary="@string/setting_tell_friend_summary"
            android:title="@string/setting_tell_friend" />
    </PreferenceCategory>
</PreferenceScreen>