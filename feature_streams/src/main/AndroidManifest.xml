<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="n7.ad2.feature_streams"
    android:targetSandboxVersion="2"
    tools:ignore="UnusedAttribute">

    <dist:module
        dist:instant="true"
        dist:title="@string/title_feature_streams">
        <dist:delivery>
            <dist:on-demand />
        </dist:delivery>

        <dist:fusing dist:include="true" />
    </dist:module>

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="AllowBackup,MissingApplicationIcon">
        <activity
            android:name=".StreamsActivity"
            android:exported="true">

            <intent-filter
                android:autoVerify="true"
                android:order="1">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:host="i30mb1.github.io" />
                <data android:pathPrefix="/streams" />
            </intent-filter>
            <meta-data
                android:name="default-url"
                android:value="https://i30mb1.github.io/streams" />
        </activity>
    </application>

</manifest>